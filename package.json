{
  "name": "rck",
  "version": "0.0.1",
  "description": "React UI Component Kit",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "scripts": {
    "build": "rimraf dist && cross-env NODE_ENV=production webpack --config config/webpack.config.js",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --config config/webpack.config.js --open",
    "test": "cross-env NODE_ENV=test webpack-dev-server --config config/webpack.config.js --open",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,json}": [
      "prettier --write",
      "git add"
    ],
    "*.{scss}": [
      "stylelint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fengyinchao/RCK.git"
  },
  "keywords": [
    "React",
    "UI",
    "Component"
  ],
  "author": "fengyinchao",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fengyinchao/FUI/issues"
  },
  "homepage": "https://github.com/fengyinchao/FUI#readme",
  "dependencies": {
    "react": "16.4.1",
    "react-dom": "16.4.1"
  },
  "devDependencies": {
    "rimraf": "2.6.3",
    "cross-env": "5.2.0",
    "eslint": "5.2.0",
    "eslint-plugin-prettier": "2.6.1",
    "eslint-plugin-react": "7.5.1",
    "husky": "0.14.3",
    "lint-staged": "7.2.0",
    "prettier": "1.13.7",
    "webpack": "4.16.3",
    "webpack-bundle-analyzer": "3.0.3",
    "webpack-cli": "3.1.0",
    "webpack-dev-server": "3.1.5"
  }
}
